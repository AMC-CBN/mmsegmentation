{
    "build": { "dockerfile": "../docker/Dockerfile" },
    "runArgs": [
        "--gpus",
        "all",
        "--shm-size",
        "8g"
    ],
    "mounts": [
        "type=bind,source=/home/${localEnv:USER}/.ssh,target=/root/.ssh,readonly"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    }
}